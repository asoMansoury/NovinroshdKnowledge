
@using Kendo.Mvc.UI;

<div class="col-md-12">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">پرینت محصولات</h3>
        </div>

        <div class="box-header">

            <form class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-1 control-label"> نام کشور</label>
                        <div class="col-sm-3">
                            @(Html.Kendo().DropDownList()
                                          .Name("drpSRCountry")
                                          .OptionLabel("انتخاب کشور")
                                          .DataTextField("CountryName")
                                          .DataValueField("Id")
                                          .Filter("contains")
                                          .DataSource(source =>
                                          {
                                              source.Read(read =>
                                            {
                                                read.Url("/api/countryapi/countries?getAll=false");

                                            });
                                          })
                            )
                        </div>

                        <label for="drpSRCompany" class="col-sm-1 control-label">  شرکت</label>
                        <div class="col-sm-2">
                            @(Html.Kendo().DropDownList()
                                          .Name("drpSRCompany")
                                          .OptionLabel("انتخاب شرکت")
                                          .DataTextField("CompanyName")
                                          .DataValueField("Id")
                                          .Filter("contains")
                                          .DataSource(source =>
                                          {
                                              source.Read(read =>
                                              {
                                                  read.Url("/api/companyapi/Companies");

                                              });
                                          })
                            )
                        </div>

                        <div class="col-sm-3" id="imageQR" style="display:none;">
                            <div class="col-md-12">
                                <div class="col-md-8">
                                    <img id="imgFileQR" src="\Images\QR" width="450" height="200" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label for="txtSRProductCode" class="col-sm-1 control-label"> کد محصول</label>
                        <div class="col-sm-3">
                            @Html.TextBox("txtSRProductCode", null, new { @class = "form-control", id = "txtSRProductCode", placeholder = "پیشوند" })
                        </div>*@
                        <label for="txtSRGS1" class="col-sm-1 control-label">کد GS1</label>
                        <div class="col-sm-3">
                            @Html.TextBox("txtSRGS1", null, new { @class = "form-control", id = "txtSRGS1", placeholder = "نام" })
                        </div>

                        <label for="txtSRTypePackage" class="col-sm-1 control-label">سطح دسته بندی</label>
                        <div class="col-sm-3">
                            @(Html.Kendo().DropDownList()
                                          .Name("txtSRTypePackage")
                                          .OptionLabel("انتخاب بسته")
                                          .DataTextField("Name")
                                          .DataValueField("Id")
                                          .Filter("contains")
                                          .DataSource(source =>
                                          {
                                              source.Read(read =>
                                              {
                                                  read.Url("/api/packageapi/Pacakges?getAll=false");

                                              });
                                          })
                                          .Enable(true)
                            )
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="txtSRGTIN" class="col-sm-1 control-label">کد GTIN</label>
                        <div class="col-sm-3">
                            @Html.TextBox("txtSRGTIN", null, new { @class = "form-control", id = "txtSRGTIN", placeholder = "پیشوند" })
                        </div>
                    </div>
                </div>
            </form>

            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right" id="btnSearch">جستجو</button>
            </div>

            <div class="form-group" id="kendoGridData">
                <label for="inputEmail3" class="col-sm-1 control-label"> نتیجه جستجو</label>
                <div class="col-sm-10 k-rtl">
                    @Html.Partial("~/Views/Shared/PrintProduct/_ProductKendoGrid.cshtml")

                </div>
            </div>
        </div>
        <hr />
        <!-- /.box-header -->
        <!-- form start -->
        <!-- Trigger the modal with a button -->

    </div>
</div>


