

<div class="col-md-12">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">وارد کردن اطلاعات</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" name="createCompanyForm">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-1 control-label">تولید کننده ایرانی</label>
                    <div class="col-sm-1">
                        <input type="checkbox" name="IsCRProducer" onChange = "CheckIsProducerSelected();" id="IsCRProducer"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-1 control-label"> نام کشور</label>
                    <div class="col-sm-3">

                        @(Html.Kendo().DropDownList()
                                          .Name("drpCRCountry")
                                          .OptionLabel("انتخاب کشور")
                                          .DataTextField("CountryName")
                                          .DataValueField("Id")
                                          .Filter("contains")
                                          .DataSource(source =>
                                          {
                                              source.Read(read =>
                                              {
                                                  read.Url("/api/countryapi/countries?getAll=false");

                                              });
                                          })
                                          .Events(events => events.Change("drpCRCountryChange"))
                        )

                    </div>

                    <label for="inputEmail3" class="col-sm-2 control-label" style="direction:rtl;">کد Gs1 کشور</label>
                    <div class="col-sm-3">
                        <input type="text" id="txtCRGs1Country" disabled="disabled" />
                        
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-1 control-label">نام شرکت</label>
                    <div class="col-sm-3">
                        @Html.TextBox("txtCrCompanyName", null, new { @class = "form-control", id = "nameCompany", placeholder = "نام" })
                    </div>
                    <label for="inputEmail3" class="col-sm-2 control-label" style="direction:rtl;">کد  Gs1 شرکت</label>
                    <div class="col-sm-3">
                        @Html.TextBox("txtCrCompanyPrefix", null, new { @class = "form-control", onChange = "checkDisableOptionalNumber();", id = "gs1Company", placeholder = "پیشوند" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="txtCrOptionalNumber" class="col-sm-1 control-label" style="direction:rtl;"> رقم اختیاری(0-9)</label>
                    <div class="col-sm-3">
                        @Html.TextBox("txtCrOptionalNumber", null, new { @class = "form-control", disabled = "disabled", id = "txtCrOptionalNumber", placeholder = "رقم اختیاری" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-1 control-label" style="direction:rtl;">شماره تلفن</label>
                    <div class="col-sm-3" style="direction:rtl;">
                        @Html.TextBox("txtCRPhoneNos", null, new { @class = "form-control", id = "phone", placeholder = "021-22222222" })
                    </div>

                    <label for="inputEmail3" class="col-sm-2 control-label">وبسایت</label>
                    <div class="col-sm-3">
                        @Html.TextBox("txtCrCompanyName", null, new { @class = "form-control", id = "site", placeholder = "وبسایت" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-1 control-label"> آدرس اول</label>
                    <div class="col-sm-10">
                        @Html.TextBox("txtCrAddress1", null, new { @class = "form-control", id = "Address1", placeholder = "آدرس" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-1 control-label"> آدرس دوم</label>
                    <div class="col-sm-10">
                        @Html.TextBox("txtCrAddress2", null, new { @class = "form-control", id = "Address2", placeholder = "آدرس" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-1 control-label"> آدرس سوم</label>
                    <div class="col-sm-10">
                        @Html.TextBox("txtCrAddress3", null, new { @class = "form-control", id = "Address3", placeholder = "آدرس" })
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="reset" class="btn btn-default" id="btnClearCreate">پاک کردن</button>
                <button type="button" class="btn btn-info pull-right" id="btnRegisterCreate">ثبت</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</div>
