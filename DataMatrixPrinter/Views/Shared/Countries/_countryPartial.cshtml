@using Kendo.Mvc.UI;
@model string
@(Html.Kendo().DropDownList()
.Name(Model)
.OptionLabel("انتخاب کشور")
.DataTextField("CountryName")
.DataValueField("CountryCode")
.Filter("contains")
.DataSource(source =>
{
    source.Read(read =>
    {
        read.Url("/api/countryapi/Countries?getAll=true");

    });
})


)

